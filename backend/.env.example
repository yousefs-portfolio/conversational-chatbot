# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/conversational
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ALGORITHM=HS256

# AI Provider Configuration
# OpenAI API (required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic API (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TEMPERATURE=0.7

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Tool API Keys
WEATHER_API_KEY=your-weather-api-key-here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
SEARCH_API_KEY=your-search-api-key-here
SEARCH_ENGINE_ID=your-search-engine-id

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_REQUEST_SIZE=10485760  # 10MB
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]

# Vector Database Configuration
VECTOR_DIMENSION=1536
VECTOR_INDEX_TYPE=hnsw
VECTOR_DISTANCE_FUNCTION=cosine
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_MAX_RESULTS=10

# Background Tasks Configuration
MEMORY_EXTRACTION_ENABLED=true
ANALYTICS_AGGREGATION_INTERVAL=3600  # 1 hour in seconds
SESSION_CLEANUP_INTERVAL=86400  # 24 hours in seconds
CONVERSATION_AUTO_ARCHIVE_DAYS=90

# Monitoring Configuration
HEALTH_CHECK_TIMEOUT=30
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=["txt", "pdf", "docx", "png", "jpg", "jpeg"]
UPLOAD_PATH=uploads/

# Development Configuration
RELOAD=true
WORKERS=1

# Production Configuration (uncomment for production)
# RELOAD=false
# WORKERS=4
# WORKER_CLASS=uvicorn.workers.UvicornWorker
# KEEPALIVE=2
# MAX_REQUESTS=1000
# MAX_REQUESTS_JITTER=100

# SSL Configuration (for production)
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# Sentry Configuration (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Multi-tenancy Configuration
DEFAULT_TENANT_NAME=default
TENANT_ISOLATION_ENABLED=true
MAX_TENANTS_PER_USER=5