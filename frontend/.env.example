# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Application Configuration
NEXT_PUBLIC_APP_NAME="Conversational AI Agent"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Intelligent conversations with tool use and memory"

# Authentication Configuration
NEXT_PUBLIC_JWT_STORAGE_KEY=conversational_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=conversational_refresh_token
NEXT_PUBLIC_SESSION_TIMEOUT=900000  # 15 minutes in milliseconds

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30000

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_TIMEZONE=UTC

# Feature Flags
NEXT_PUBLIC_VOICE_ENABLED=false
NEXT_PUBLIC_FILE_UPLOAD_ENABLED=true
NEXT_PUBLIC_DARK_MODE_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=true

# Chat Configuration
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4000
NEXT_PUBLIC_TYPING_INDICATOR_TIMEOUT=3000
NEXT_PUBLIC_MESSAGE_LOAD_LIMIT=50
NEXT_PUBLIC_AUTO_SCROLL_ENABLED=true

# Tool Configuration
NEXT_PUBLIC_CALCULATOR_ENABLED=true
NEXT_PUBLIC_WEB_SEARCH_ENABLED=true
NEXT_PUBLIC_WEATHER_ENABLED=true
NEXT_PUBLIC_FILE_OPERATIONS_ENABLED=false

# Memory Configuration
NEXT_PUBLIC_MEMORY_SEARCH_ENABLED=true
NEXT_PUBLIC_MEMORY_DISPLAY_LIMIT=10
NEXT_PUBLIC_AUTO_MEMORY_EXTRACTION=true

# Performance Configuration
NEXT_PUBLIC_DEBOUNCE_DELAY=300
NEXT_PUBLIC_CACHE_TTL=300000  # 5 minutes in milliseconds
NEXT_PUBLIC_LAZY_LOADING_ENABLED=true

# Error Handling
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=false
NEXT_PUBLIC_RETRY_ATTEMPTS=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Styling Configuration
NEXT_PUBLIC_BRAND_COLOR=#3B82F6
NEXT_PUBLIC_SUCCESS_COLOR=#10B981
NEXT_PUBLIC_ERROR_COLOR=#EF4444
NEXT_PUBLIC_WARNING_COLOR=#F59E0B

# External Services
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_INTERCOM_APP_ID=""

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_DEVTOOLS=false

# Progressive Web App
NEXT_PUBLIC_PWA_ENABLED=false
NEXT_PUBLIC_PWA_NAME="Conversational AI"
NEXT_PUBLIC_PWA_SHORT_NAME="ConvAI"
NEXT_PUBLIC_PWA_THEME_COLOR=#3B82F6

# Internationalization
NEXT_PUBLIC_I18N_ENABLED=false
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=["en", "es", "fr", "de"]

# Security Configuration
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_SAME_SITE_COOKIES=strict

# Social Login (if implemented)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=""
NEXT_PUBLIC_GITHUB_CLIENT_ID=""
NEXT_PUBLIC_DISCORD_CLIENT_ID=""

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=52428800  # 50MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/*,text/*,.pdf,.docx,.xlsx"
NEXT_PUBLIC_UPLOAD_ENDPOINT="/api/upload"

# Real-time Configuration
NEXT_PUBLIC_ENABLE_TYPING_INDICATORS=true
NEXT_PUBLIC_ENABLE_READ_RECEIPTS=false
NEXT_PUBLIC_ENABLE_PRESENCE=false

# Accessibility Configuration
NEXT_PUBLIC_HIGH_CONTRAST_MODE=false
NEXT_PUBLIC_SCREEN_READER_ENABLED=true
NEXT_PUBLIC_KEYBOARD_NAVIGATION=true

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_CORE_WEB_VITALS=false